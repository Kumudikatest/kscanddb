{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project kscanddb. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    },
    "envVark1Parameter": {
      "Type": "String",
      "Description": "Value of the environment variable: k1, for all Lambdas"
    }
  },
  "Outputs": {
    "kscanddb": {
      "Description": "ARN of Lambda function kscanddb",
      "Value": {
        "Fn::GetAtt": [
          "kscanddb",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "ddbkum": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "kum",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    },
    "kscanddb": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "kscanddb",
        "Description": "Invokes functions defined in kscanddb.js in project kscanddb. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "kscanddb.handler",
        "Timeout": 60,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "kscanddbExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "k1": {
              "Ref": "envVark1Parameter"
            },
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "kscanddbExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "kscanddbPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:Scan"
                  ],
                  "Resource": {
                    "Fn::GetAtt": [
                      "ddbkum",
                      "Arn"
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
}